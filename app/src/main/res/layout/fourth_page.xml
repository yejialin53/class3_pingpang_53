    <TextView
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:text="时间"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:text="名称"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="地点"
        android:textAlignment="center"
        android:textSize="20dp" />
